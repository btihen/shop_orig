<p id="notice"><%= notice %></p>

<h1>Suppliers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Currency</th>
      <th>Website</th>
      <th>E-Mail</th>
      <th>Phone</th>
      <th>Address 1</th>
      <th>Address 2</th>
      <th>City</th>
      <th>Region</th>
      <th>Postcode</th>
      <th>Country</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.supplier_name %></td>
        <td><%= supplier.supplier_currency %></td>
        <td><%= supplier.supplier_web_url %></td>
        <td><%= supplier.supplier_email %></td>
        <td><%= supplier.supplier_phone %></td>
        <td><%= supplier.supplier_address_1 %></td>
        <td><%= supplier.supplier_address_2 %></td>
        <td><%= supplier.supplier_city %></td>
        <td><%= supplier.supplier_region %></td>
        <td><%= supplier.supplier_postcode %></td>
        <td><%= supplier.supplier_country_code %></td>
        <td><%= supplier.supplier_notes %></td>
        <td><%= link_to 'Show', supplier %></td>
        <td><%= link_to 'Edit', edit_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', supplier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

