<p id="notice"><%= notice %></p>

<h1>Sale Items</h1>

<table>
  <thead>
    <tr>
      <th>Note</th>
      <th>Sale price</th>
      <th>Sale</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sale_lines.each do |sale_line| %>
      <tr>
        <td><%= sale_line.sale_line_note %></td>
        <td><%= sale_line.sale_price %></td>
        <td><%= sale_line.sale.id %></td>
        <td><%= link_to 'Show', sale_line %></td>
        <td><%= link_to 'Edit', edit_sale_line_path(sale_line) %></td>
        <td><%= link_to 'Destroy', sale_line, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sale Item', new_sale_line_path %>
